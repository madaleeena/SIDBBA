<div class="pg-opt"> 
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Log in</h2>
                </div>
            
            </div>
        </div>
    </div>
    <section class="slice bg-white">
        <div class="wp-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                        <div class="wp-block default user-form"> 
                            <div class="form-header">
                                <h2>Login na conta de utilizador</h2>
                            </div>
                            <div class="form-body">
                                <form  action="/login" class="sky-form" method= "post"> 
                                <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>                                   
                                    <fieldset>                  
                                        <section>
                                            <div class="form-group">
                                                <label class="label">Email</label>
                                                <label class="input">
                                                    <i class="icon-append fa fa-user"></i>
                                                    <input type="email" name="session[email]">
                                                </label>
                                            </div>     
                                        </section>
                                        <section>
                                            <div class="form-group">
                                                <label class="label">Password</label>
                                                <label class="input">
                                                    <i class="icon-append fa fa-lock"></i>
                                                    <input type="password" name="session[password]">
                                                </label>
                                            </div>     
                                        </section> 
    

                                        <section>
                                            <button class="btn btn-base" type="submit">
                                                <span>Confirmar</span>
                                            </button>
                                        </section>
                                    </fieldset>  
                                </form>    
                            </div>
                            <div class="form-footer">
                                <p>Ainda não está registado? <a href="/users/new">Registar Agora</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>